<dialog id='login-dialog' class='dialog'>
    <div class='login-wrapper'>
        <div class='login-box'>
            <div class='login-box-title'>Login</div>
            <form action='/login  ' method='POST'>
                <p class='login-box-p'>ID</p>
                <div class='login-box-input'>
                    <input type='text' name='username' autocomplete='off' placeholder='ID 입력' required>
                </div>
                <p class='login-box-p'>Password</p>
                <div class='login-box-input'>
                    <input type='password' name='password' autocomplete='off' placeholder='Password 입력' required>
                </div>
                <button class='submit-button' type='submit'>LOGIN</button>
            </form>
            <div class='find'>
                <span class='find-span'><a href='#'>find your ID</a></span>
                |
                <span class='find-span'><a href='#'>find your PW</a></span>
            </div>
        </div>
    </div>
    <div class='close-button' id='login-close'>close</div>
</dialog>